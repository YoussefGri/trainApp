<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Champ de saisie pour la ville de départ -->
    <EditText
        android:id="@+id/etDepart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ville de départ" />

    <!-- Champ de saisie pour la ville d'arrivée -->
    <EditText
        android:id="@+id/etArrivee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ville d'arrivée" />

    <!-- Bouton pour rechercher les trains -->
    <Button
        android:id="@+id/btnRechercher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rechercher" />

    <!-- Liste des horaires sous forme de RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHoraires"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>
</LinearLayout>
